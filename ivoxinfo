#!/usr/bin/python

import argparse
import numpy

import ivoxoar.space

if __name__ == "__main__":
    numpy.seterr(divide='ignore', invalid='ignore')

    parser = argparse.ArgumentParser(prog='ivoxinfo')
    parser.add_argument('infile', help='input file, must be a .zpi')

    args = parser.parse_args()
    
    space = ivoxoar.space.Space.fromfile(args.infile)
    print space
